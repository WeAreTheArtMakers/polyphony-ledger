# Copy to .env.tunnel

# Public hostnames that will be routed by Cloudflare Tunnel
APP_DOMAIN=apppoly.wearetheartmakers.com
API_DOMAIN=apipoly.wearetheartmakers.com
OBS_DOMAIN=obspoly.wearetheartmakers.com
TRACE_DOMAIN=tracepoly.wearetheartmakers.com

# From Cloudflare Zero Trust -> Networks -> Tunnels -> <your tunnel> -> Docker
CLOUDFLARE_TUNNEL_TOKEN=

# App auth mode
# Use "off" for first smoke run, then switch to "oidc"
AUTH_MODE=off
OIDC_ISSUER_URL=
OIDC_AUDIENCE=
OIDC_JWKS_URL=
OIDC_ROLE_CLAIM=realm_access.roles
OIDC_WORKSPACE_CLAIM=workspace_id
OIDC_SUBJECT_CLAIM=sub
OIDC_ALGORITHMS=RS256

# Grafana login (local + tunneled)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me
