{
  "id": null,
  "uid": "poly-api-metrics",
  "title": "API Metrics",
  "tags": ["polyphony", "api"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests / sec",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(polyphony_http_requests_total[1m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "TX Ingested / sec",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(polyphony_tx_ingested_total[1m])) by (version)",
          "legendFormat": "{{version}}"
        }
      ]
    }
  ]
}
