# Copy to .env.prod and fill with real values.

APP_DOMAIN=apppoly.wearetheartmakers.com
API_DOMAIN=apipoly.wearetheartmakers.com
OBS_DOMAIN=obspoly.wearetheartmakers.com
TRACE_DOMAIN=tracepoly.wearetheartmakers.com
ACME_EMAIL=ops@wearetheartmakers.com

# Caddy basic auth users for restricted domains
OBS_AUTH_USER=ops
OBS_AUTH_HASH=
TRACE_AUTH_USER=ops
TRACE_AUTH_HASH=

# Core app
AUTH_MODE=oidc
CORS_ORIGINS=https://apppoly.wearetheartmakers.com
DEFAULT_WORKSPACE_ROLE=viewer
DEFAULT_WORKSPACE_MONTHLY_TX_QUOTA=1000000

# OIDC (Auth0 or Keycloak)
OIDC_ISSUER_URL=
OIDC_AUDIENCE=
OIDC_JWKS_URL=
OIDC_ROLE_CLAIM=realm_access.roles
OIDC_WORKSPACE_CLAIM=workspace_id
OIDC_SUBJECT_CLAIM=sub
OIDC_ALGORITHMS=RS256
AUTOSCALE_TARGET_LAG=200
AUTOSCALE_TARGET_THROUGHPUT_PER_MINUTE=120

# Backend + ClickHouse
POSTGRES_DSN=postgresql://polyphony:polyphony@postgres:5432/polyphony
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=polyphony
CLICKHOUSE_DATABASE=polyphony

# Grafana admin
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=
